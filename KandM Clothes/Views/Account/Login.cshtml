@using KandM_Clothes.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link href="~/Content/assets/styles/main_styles.css" rel="stylesheet" />
<style>
    .vertical-spacing > * {
        margin-bottom: 15px; /* Adjust the margin as needed */
    }
</style>
<div class="container" style="margin-top:160px">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Use a local account to log in.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row vertical-spacing">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row vertical-spacing">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row vertical-spacing">
                    <div class="offset-md-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="row vertical-spacing">
                    <div class="offset-md-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-outline-dark" />
                    </div>
                </div>
                <div class="row vertical-spacing" style="display: flex; gap: 15px;">
                    <p>
                        @Html.ActionLink("Register as a new user", "Register")
                    </p>
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>
                </div>
            }
        </div>

    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}