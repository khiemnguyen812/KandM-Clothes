@model KandM_Clothes.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/assets/styles/main_styles.css" rel="stylesheet" />
<style>
    .vertical-spacing > * {
        margin-bottom: 15px; /* Adjust the margin as needed */
    }
</style>

<div class="container" style="margin-top:160px">
    <div class="row">
        <div class="col-md-12">
            <h2 id="title">@ViewBag.Title.</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Role, new { Value = ViewBag.CustomerRole })
                <h4>Create a new account.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row vertical-spacing">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row vertical-spacing">
                    @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row vertical-spacing">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row vertical-spacing">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row vertical-spacing">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row vertical-spacing">
                    <div class="offset-md-2 col-md-10">
                        <input type="submit" value="Register" class="btn btn-outline-dark" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>



@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        console.log('@ViewBag.CustomerRole');
    </script>
}
