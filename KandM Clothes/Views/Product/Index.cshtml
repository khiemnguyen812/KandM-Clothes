                                                        @if (item.IsSale)
                                                        {
                                                            @:$@item.PriceSale.ToString()<span>$@item.Price.ToString()</span>
                                                        }
                                                        else
                                                        {
                                                            @:$@item.Price.ToString()
                                                        }
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="red_button add_to_cart_button" style="z-index:1;" data-id="@item.Id"><a href="#">add to cart</a></div>
