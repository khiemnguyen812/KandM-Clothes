@model KandM_Clothes.Models.ApplicationUser
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/account" class="nav-link">Quản lý tài khoản</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/account/register" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title" style="font-size: 30px;">Thông tin thêm mới danh mục</h3>


        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.Id)
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên tài khoản</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Tên tài khoản" })
                            @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Họ tên</label>
                            @Html.TextAreaFor(x => x.FullName, new { @class = "form-control", @placeholder = "Họ tên" })
                            @Html.ValidationMessageFor(x => x.FullName, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Số điện thoại</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Số điện thoại" })
                            @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Quyền</label>
                            @Html.DropDownListFor(model => model.Roles.FirstOrDefault().RoleId, ViewBag.Roles as SelectList, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="NewPassword">Mật khẩu mới</label>
                            <input type="password" class="form-control" id="NewPassword" name="NewPassword" placeholder="Mật khẩu mới">
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPassword">Xác nhận mật khẩu mới</label>
                            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Xác nhận mật khẩu mới">
                        </div>

                    </div>
                    <a href="/admin/account" class="btn btn-danger">Quay lại</a>
                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

<script type="text/javascript">
    // Chuyển dữ liệu từ ViewBag.Roles sang JavaScript object
    var roles = @Html.Raw(Json.Encode(ViewBag.Roles));
    console.log(roles);
</script>
